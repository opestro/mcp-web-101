    <script>
        // Add meta description based on current page
        document.addEventListener('DOMContentLoaded', () => {
            // Show progress bar only on installation and tutorial pages
            if (window.location.pathname === '/installation' || window.location.pathname === '/tutorial') {
                document.getElementById('progress-container').classList.remove('hidden');
                
                // Calculate reading progress
                window.addEventListener('scroll', () => {
                    const winScroll = document.documentElement.scrollTop;
                    const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                    const scrolled = (winScroll / height) * 100;
                    document.getElementById('progress-bar').style.width = scrolled + '%';
                });
            }

            // Set active navigation item
            const path = window.location.pathname;
            if (path === '/') {
                document.getElementById('nav-home').classList.add('active');
                document.getElementById('nav-home').setAttribute('aria-current', 'page');
            } else if (path === '/installation') {
                document.getElementById('nav-install').classList.add('active');
                document.getElementById('nav-install').setAttribute('aria-current', 'page');
            } else if (path === '/tutorial') {
                document.getElementById('nav-tutorial').classList.add('active');
                document.getElementById('nav-tutorial').setAttribute('aria-current', 'page');
            }
        });
